<%= form_with(model: [:admin, author], class: "needs-validation", novalidate: true) do |form| %>

  <%= render "shared/error_display", resource: form.object %>

  <div class="mb-3">
    <%= form.label :full_name, "Nombre Completo del Autor", class: "form-label" %>

    <%= form.text_field :full_name,
      class: "form-control #{author.errors[:full_name].present? ? 'is-invalid'
       : ''}",
    required: true,
    placeholder: "Ej: Michael Jackson, AC/DC" %>

    <div class="form-text text-muted">
      Este campo es Ãºnico. Introduce el nombre completo del autor.
    </div>

  </div>

  <div>
    <%= form.submit (author.persisted? ? "Guardar Cambios" : "Crear Autor"),
      class: "btn btn-success me-2" %>

    <%= link_to "Cancelar", admin_authors_path, class: "btn btn-secondary" %>
  </div>
<% end %>