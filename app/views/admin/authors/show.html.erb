<% content_for :admin_content do %>
  <% content_for :title, "Detalle del Autor" %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0 text-dark">
      <i class="fas fa-user-edit me-2"></i> Detalle del Autor
    </h2>
  </div>


  <div class="card shadow-lg border-0 mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Información del Autor</h5>
    </div>
    <div class="card-body">
      <%# Información Principal %>
      <dl class="row mb-0">

        <dt class="col-sm-3">Nombre Completo:</dt>
        <dd class="col-sm-9">
          <h4 class="mb-0 "><%= @author.full_name %></h4>
        </dd>

        <dt class="col-sm-3">Fecha de Creación:</dt>
        <dd class="col-sm-9"><%= @author.created_at.strftime("%d/%m/%Y a las %H:%M") %></dd>

        <%# Si tuvieras un campo de actualización %>
        <% if @author.updated_at != @author.created_at %>
          <dt class="col-sm-3">Última Actualización:</dt>
          <dd class="col-sm-9"><%= @author.updated_at.strftime("%d/%m/%Y a las %H:%M") %></dd>
        <% end %>
      </dl>
    </div>
  </div>

  <%# 2. Botones de Acción %>
  <div class="d-flex gap-2">
    <%# Editar %>
    <%= link_to "Editar Autor", edit_admin_author_path(@author), class: "btn btn-warning" %>

    <%# Volver %>
    <%= link_to "Volver a Autores", admin_authors_path, class: "btn btn-secondary" %>

    <%# Eliminar %>
    <%= button_to "Eliminar Autor", [:admin, @author],
      method: :delete,
      data: { turbo_confirm: "¿Estás seguro de que quieres eliminar al autor '#{@author.full_name}'?" },
      class: "btn btn-danger" %>
  </div>
<% end %>