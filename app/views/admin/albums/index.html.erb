<% content_for :admin_content do %>
<p style="color: green"><%= notice %></p>

<% content_for :title, "Albums" %>

<h1>Albums</h1>

<div id="albums">
  <% @albums.each do |album| %>
    <%= render album %>
    <p>
      <%= link_to "Show this album", admin_album_path(album) %>
    </p>
  <% end %>
</div>

<%= link_to "New album", new_admin_album_path %>
<% end %>
