<%# app/views/admin/genres/_form.html.erb %>

<%= form_with(model: [:admin, genre], class: "needs-validation", novalidate: true) do |form| %>


  <%= render "shared/error_display", resource: form.object %>


  <div class="mb-3">
    <%= form.label :name, "Nombre del Género", class: "form-label" %>

    <%= form.text_field :name,
      class: "form-control #{genre.errors[:name].present? ? 'is-invalid' :
      ''}",
    required: true,
    placeholder: "Ej: Ficción, Thriller, Comedia" %>

    <div class="form-text text-muted">
      Introduce un nombre único y descriptivo para el género.
    </div>

  </div>


  <div>
    <%= form.submit (genre.persisted? ? "Guardar Cambios" : "Crear Género"),
      class: "btn btn-success me-2" %>

    <%= link_to "Cancelar", admin_genres_path, class: "btn btn-secondary" %>
  </div>
<% end %>